<% content_for :page_title do %>
  <%= Spree.t(:google_tag_manager) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:add_google_tag_manager), new_object_url, class: "btn-success", icon: 'add', id: 'admin_new_tracker_link' %>
<% end if can? :create, Spree::GoogleTagManager %>

<% if @google_tag_managers.any? %>
  <table class="table">
    <thead>
      <tr data-hook="admin_trackers_index_headers">
        <th><%= Spree.t(:google_tag_manager_id) %></th>
        <th><%= Spree.t(:store) %></th>
        <th class="text-center"><%= Spree.t(:active) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @google_tag_managers.each do |gtm|%>
        <tr id="<%= spree_dom_id gtm %>" data-hook="admin_trackers_index_rows">
          <td><%= gtm.gtm_id %></td>
          <td><%= gtm.store&.name %></td>
          <td class="text-center">
            <%= gtm.active ? Spree.t(:say_yes) : Spree.t(:say_no) %>
          </td>
          <td class="actions text-right">
            <%= link_to_edit(gtm, no_text: true) if can? :edit, gtm %>
            <%= link_to_delete(gtm, no_text: true) if can? :delete, gtm %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info">
    <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::GoogleTagManager)) %>,
    <%= link_to(Spree.t(:add_one), new_object_url) if can? :create, Spree::GoogleTagManager %>!
  </div>
<% end %>
