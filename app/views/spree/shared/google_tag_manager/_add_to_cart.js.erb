<% if gtm_tracker.present? && @order.present? %>
  <% add_to_cart = SpreeGoogleTagManager::OrderPresenter.add_to_cart(@order) %>
  <script>
    window.addEventListener('turbolinks:load', function() {
      if (typeof gtag !== 'undefined') {
        clearGAplugins();
        gtag('event', 'add_to_cart', "<%= add_to_cart %>");
      }
    });
  </script>
<% end %>
