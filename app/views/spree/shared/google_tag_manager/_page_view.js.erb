<% if gtm_tracker.present? && @product.present? %>
  <% page_view = SpreeGoogleTagManager::ProductPresenter.page_view(try_spree_current_user.email) %>
  <script>
    window.addEventListener('turbolinks:load', function() {
      if (typeof gtag !== 'undefined') {
        clearGAplugins();
        gtag('event', 'page_view', "<%= page_view %>");
      }
    });
  </script>
<% end %>
