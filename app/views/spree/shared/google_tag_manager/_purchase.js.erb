<% if gtm_tracker&.active && @order.present? && order_just_completed?(@order) %>
  <% purchase = SpreeGoogleTagManager::OrderPresenter.purchase(@order) %>
  <script>
    window.addEventListener('turbolinks:load', function() {
      if (typeof gtag !== 'undefined') {
        clearGAplugins();
        var data = <%= raw(purchase.to_json) %>
        window.dataLayer.push(data);
      }
    });
  </script>
<% end %>
